
@{
    ViewBag.Title = "Output";
}

<h2>Output</h2>
<style>
    td, th {
        padding: 5px;
        text-align: center;
    }
</style>

<table class="table-bordered" width="700">
    <tr style="background-color: #ffffcc">
        <th align="center">Ma nhan vien</th>
        <th>Ho ten nhan vien</th>
        <th>So ngay cong</th>
        <th>Tien mot ngay cong</th>
        <th>Luong</th>
    </tr>
    @{
        double luong = 0;
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.maNV</td>
            <td>@item.hoTen</td>
            <td>@item.soNgayCong</td>
            <td>@item.motNgayCong</td>
            <td>@item.luong</td>
        </tr>
    }
</table>
<br />
<br />

@Html.ActionLink("Them nhan vien", "Add", "NhanVien")




