@model IEnumerable<proj132.Models.SanphamMua>
@{
    ViewBag.Title = "Chonmua";
}

<h2>Chọn mua</h2>
@{
    List<proj132.Models.SanphamMua> dsmua = (List<proj132.Models.SanphamMua>)Session["giohang"];
    List<proj132.Models.Sanpham> ds = (List<proj132.Models.Sanpham>)Session["hanghoa"];

}
<table class="table-bordered" width="500">
    <tr style="background-color:" $ffffcc">
        <th align="center" Mã sản phẩm></th>
        <th>Tên sản phẩm</th>
        <th>Hình ảnh</th>
        <th>Số lượng</th>
        <th>Giá tiền</th>
        <th>Xoá sản phẩm</th>
    </tr>

    @foreach (var item in dsmua)
    {
        proj132.Models.Sanpham s = new proj132.Models.Sanpham(item.masp);
        int vitri = ds.IndexOf(s);
        s = ds[vitri];
        <tr>
            <td align="center">@s.masp</td>
            <td>@s.tensp</td>
            <td align="center">
                <img src="~/Content/Images/@s.hinhanh"  width="80" />
            </td>
            <td align="center">@item.soluong</td>
            <td align="center">
                @s.giatien
            </td>
            <td align="center">
                <a href="@Url.Action("XoaSanPham", "MuaBan", new {masp=item.masp})">Xoá sản phẩm</a>
            </td>

        </tr>

    }
</table>
<br />
@Html.ActionLink("Mua tiếp", "Index", "MuaBan")
<br />
<br />
@Html.ActionLink("Đặt hàng", "Datmua", "MuaBan")