@model IEnumerable<proj9_2.Models.category>

@{
    ViewBag.Title = "Index";
}

<h2>Danh mục</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.catname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.catname)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.catid }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.catid }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.catid })
        </td>
    </tr>
}

</table>
