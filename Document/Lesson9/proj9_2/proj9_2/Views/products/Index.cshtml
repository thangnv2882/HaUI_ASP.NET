@model IEnumerable<proj9_2.Models.product>

@{
    ViewBag.Title = "Index";
}

<h2>Tài khoản người dùng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category.catname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.proname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.category.catname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.proname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.stock)
        </td>
        <td>
            @{ 
                string ImagePath = "~/wwwroot/Shop2dbImages/" + item.image;
            }
            <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
            <br />
            @Html.DisplayFor(modelItem => item.image)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.proid }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.proid }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.proid })
        </td>
    </tr>
}

</table>
