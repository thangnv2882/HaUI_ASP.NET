
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Login", "Login"))
{
    <div>
        @Html.Label("Username: ")
    </div>
    <div>
        @Html.TextBox("username")
    </div>
    <div>
        @Html.Label("Password: ")
    </div>
    <div>
        @Html.TextBox("password")
    </div>
    <input type="submit" value="Login" />
    <p>@ViewBag.msg</p>
}
