
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="login">
    <div class="input">
        @using (Html.BeginForm())
            {
                <p><label>Username: </label><input type="text" name="username" /></p> <br />
                <p><label>Password: </label><input type="text" name="password" /></p> <br />
                <p><input class="lg" type="submit" value="Login" /></p> <br />
            }
    </div>
    @ViewBag.errLogin
</div>

